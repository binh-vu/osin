    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Module",
            "type": "python",
            "request": "launch",
            "module": "osin",
            "justMyCode": true,
            "args": [
                "start",
                "-d",
                "${workspaceFolder}/data",
                "--wsgi"
            ],
            "env": {
                "FLASK_DEBUG": "1",
            }
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "PyTest",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "justMyCode": true,
            "args": [
                "-xvs",
                // "-k",
                // "test_report"
            ],
            "env": {
                "FLASK_DEBUG": "development"
            }
        },
        {
            "name": "Example model",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/examples/classification/main.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "--dataset",
                "iris",
                "--method",
                "Nearest Neighbors"
            ]
        },
    ]
}